{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}
